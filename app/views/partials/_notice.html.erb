<% if notice != nil %> <%#si notificacion es nula, tambien se puede escribir if !notice=nil? usando metodo nil (.nil?) de ruby%>
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= notice %>
    </div>
<%end%>

<% if alert != nil %> <%# si alerta es nula %>
    <div class="alert alert-dismissible alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= alert %>
    </div>
<%end%>